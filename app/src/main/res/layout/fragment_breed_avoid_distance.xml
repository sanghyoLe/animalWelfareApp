<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="회피 거리 평가"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="60dp">
                <EditText
                    android:id="@+id/breed_avoid_distance_pen_ed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="표본 펜 설정 위치 예: 1-4 3-2 ..."
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginBottom="15dp"
                    android:inputType="number">
                </EditText>
            <EditText
                android:id="@+id/breed_avoid_distance_cow_ed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="표본 개체 개체번호"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="15dp"
                android:inputType="number">
            </EditText>

            <RadioGroup
                android:id="@+id/breed_avoid_distance_rg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:paddingLeft="10dp">
                <RadioButton
                    android:id="@+id/breed_avoid_distance_rb_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="만질 수 있음"
                    android:textSize="15dp"
                    android:layout_weight="1">
                </RadioButton>
                <RadioButton
                    android:id="@+id/breed_avoid_distance_rb_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="50cm 이상 가까이 다가갈 수 있으나 만질 수 없음"
                    android:layout_weight="1">
                </RadioButton>
                <RadioButton
                    android:id="@+id/breed_avoid_distance_rb_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="50~100cm 이내로 접근 허용"
                    android:layout_weight="1">
                </RadioButton>
                <RadioButton
                    android:id="@+id/breed_avoid_distance_rb_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="100cm 이내로 다가갈 수 없음"
                    android:layout_weight="1">
                </RadioButton>
            </RadioGroup>
            <EditText
                android:id="@+id/breed_avoid_distance_unique_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="특이사항 입력"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="15dp"
                android:inputType="number">
            </EditText>
        </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="회피 거리 점수"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp">
            <TextView
                android:id="@+id/breed_avoid_distance_score_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50"
                android:textSize="20dp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" / 100 점"/>

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="적절한 행동 종합 점수"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp">
            <TextView
                android:id="@+id/breed_protocol_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20dp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" / 100 점"/>

        </LinearLayout>
    </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>