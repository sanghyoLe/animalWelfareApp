<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:stretchColumns="*"
        android:shrinkColumns="*"
        >
        <TableRow>
            <TextView
                android:id="@+id/pen_number_tv"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"

                android:layout_margin="1dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:gravity="center_horizontal"
                />
            <TextView
                android:id="@+id/pen_location_already_input"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_margin="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:visibility="gone"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/pen_location_ed_1"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_margin="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:inputType="text"

                android:hint="1"
                />

            <TextView
                android:id="@+id/pen_location_hyphen"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:layout_margin="1dp"
                android:textSize="16sp"
                android:textColor="@color/black"

                android:gravity="center_horizontal"
                />

            <EditText
                android:id="@+id/pen_location_ed_2"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_margin="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:inputType="text"

                android:hint="5"
                />

            <Spinner
                android:layout_weight="1"
                android:id="@+id/cow_count_spinner"
                android:gravity="center_horizontal"
                android:layout_margin="1dp"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/already_cow_size"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_margin="1dp"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:visibility="gone"
                android:textStyle="bold"/>
            <Button
                android:id="@+id/select_pen_btn"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_margin="1dp"
                android:textSize="16sp"
                android:layout_width="40sp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="입력"
                />
        </TableRow>
    </TableLayout>
</LinearLayout>