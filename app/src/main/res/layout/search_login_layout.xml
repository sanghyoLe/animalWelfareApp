<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">
            <TextView
                android:id="@+id/normal_member"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:background="@drawable/edge_bottom"
                android:textStyle="bold"
                android:text="일반 회원"
                />
            <TextView
                android:id="@+id/admin_member"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="16dp"

                android:textColor="@color/colorBlack"
                android:background="@null"
                android:text="관리자"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible"
            android:gravity="center"
            android:layout_margin="20dp"
            android:id="@+id/normal_member_layout">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="조회"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_marginBottom="10dp"
                android:textSize="20dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="농장 종류"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/colorBlack"
                    />
                <RadioGroup
                    android:id="@+id/cow_kind_rg"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <RadioButton
                        android:id="@+id/cow_kind_beef"
                        android:layout_width="wrap_content"
                        android:text="한육우"

                        android:layout_height="wrap_content"/>
                    <RadioButton
                        android:id="@+id/cow_kind_milk_cow"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="착유우"
                        android:layout_height="wrap_content"/>
                </RadioGroup>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"

                android:orientation="horizontal">
                <Spinner
                    android:id="@+id/search_filter_spinner"
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/search_ed"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_square"
                    android:layout_weight="0.6"
                    android:textSize="15dp"
                    android:padding="5dp"

                    android:layout_gravity="center_vertical"
                    android:hint="검색어를 입력해주세요."
                    android:gravity="center"/>
            </LinearLayout>
            <Button
                android:id="@+id/search_btn"
                android:textSize="15dp"
                android:text="검색"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/colorPrimary"
                android:textColor="@color/white"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            android:gravity="center"
            android:layout_margin="20dp"
            android:id="@+id/admin_member_layout">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="로그인"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_marginBottom="30dp"
                android:textSize="20dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textSize="15dp"
                    android:hint="아이디를 입력해 주세요."
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/round_square"/>
                <EditText
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="비밀번호를 입력해 주세요."
                    android:textSize="15dp"
                    android:background="@drawable/round_square"/>
            </LinearLayout>

            <Button
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:text="로그인"
                android:textSize="15dp"
                android:textColor="@color/white"/>

        </LinearLayout>
    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>