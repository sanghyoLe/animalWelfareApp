<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="경미한 외피 변형"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="경미한 외피 변형 - 1개 이상 탈모, 병변 및 부종은 없음"
                    android:padding="20dp"
                    android:textSize="16dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="총 표본 두수"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="30dp"
                    />
                <TextView
                    android:id="@+id/ratio_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="30dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/hairloss_ratio_a1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="표본 설정 위치(예: 1-4, 3-2..)"
                    android:layout_margin="30dp"
                    android:inputType="number">
                </EditText>
                <EditText
                    android:id="@+id/hairloss_a1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="경미한 외피변형 두수를 입력하세요"
                    android:layout_margin="30dp"
                    android:inputType="number">
                </EditText>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
