<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:stretchColumns="*"
        android:shrinkColumns="*"
        >
        <TableRow
            android:layout_marginTop="20sp">
            <TextView
                android:id="@+id/dong_count_tv"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="동 순번"

                android:layout_margin="1dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:gravity="center_horizontal" />
            <EditText
                android:id="@+id/pen_location_1_ed"
                android:layout_weight="0.4"
                android:gravity="center_horizontal"
                android:layout_margin="1dp"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:maxLength="2"
                android:inputType="number"
                android:hint="1"
                />
            <TextView
                android:layout_weight="0.2"
                android:gravity="center_horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="-"
                />
            <EditText
                android:id="@+id/pen_location_2_ed"
                android:layout_weight="0.4"
                android:gravity="center_horizontal"
                android:layout_margin="1dp"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:maxLength="2"
                android:inputType="number"
                android:hint="5"
                />
            <CheckBox android:id="@+id/checkbox_location_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:layout_gravity="center"
                />
            <CheckBox android:id="@+id/checkbox_location_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:layout_gravity="center"
                />
            <CheckBox android:id="@+id/checkbox_location_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:layout_gravity="center"
                />
        </TableRow>
    </TableLayout>

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary" />

</LinearLayout>